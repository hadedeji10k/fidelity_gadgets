<main class="l-main">
    <!--========== HOME ==========-->
    <section class="home" id="home">
        <div class="home__container bd-container bd-grid">
            <div class="home__data">
                <h1 class="home__title">Fidelity Gadgets</h1>
                <h2 class="home__subtitle">Gadgets Hub <br> Try the best & <br> latest Gadgets. </h2>
                <a href="/products/" class="button">Explore Now</a>
            </div>

            <!-- <img src="assets/img/logo.jpg" alt="" class="home__img"> -->
            <img src="/images/logo.png" alt="" class="home__img">
        </div>
    </section>
    <br> <br>
    <h2 class="section-title">Welcome to Fidelity Gadgets</h2>


    <!--========== Latest Products ==========-->
    <section class="menu section bd-container" id="menu">
        <h2 class="section-title">Latest Products</h2>

        <div class="menu__container bd-grid">
        <% latestProducts.forEach(product => { %>
                <div class="menu__content">
                    <img src="/product_images/<%= product.id %>/<%= product.image %>" alt="" class="menu__img">
                    <h3 class="menu__name"><%= product.title %></h3>
                    <span class="menu__detail"><a href="/products/<%= product.category %>/<%= product.slug %>">View Details</a></span>
                    <span class="menu__preci">&#8358;<%= parseFloat(product.price).toFixed(2) %></span>
                    <a href="/cart/add/<%= product.slug %>" class="button menu__button"><i class='bx bx-cart-alt'></i></a>
                </div>
            <% }) %> 
        </div><br><br>
        <div class="menu__container bd-grid">
            <a href="/products/" class="button center">View All Products</a>
        </div>
    </section>

    <!--========== Home-product ==========-->
    <section class="menu section bd-container">
        <h2 class="section-title">Discount Products</h2>
        <div class="menu__container bd-grid">
        <% homeProducts.forEach(product => { %>
            <% if (product.type == "discount") { %>
                <!--========== Discount-product ==========-->
                <div class="menu__content">
                    <img src="/home_images/<%= product.id %>/<%= product.image %>" alt="" class="menu__img">
                    <h3 class="menu__name"><%= product.title %></h3>
                    <span class="menu__detail"><a href="/home-page/<%= product.slug %>">View Details</a></span>
                    <span class="menu__preci">&#8358;<%= parseFloat(product.discountPrice).toFixed(2) %></span>
                    <del>&#8358;<%= parseFloat(product.price).toFixed(2) %> </del> <br>
                    <a href="/cart/add/home-page/<%= product.slug %>" class="button menu__button"><i class='bx bx-cart-alt'></i></a>
                </div>
            <% } %>
            <% }) %>
        </div>
    </section>
        
    <section class="menu section bd-container">
        <h2 class="section-title">Latest Offers</h2>
        <div class="menu__container bd-grid">
        <% homeProducts.forEach(product => { %>
            <% if (product.type == "offer") { %>
                <!--========== Offer-product ==========-->
                <div class="menu__content">
                    <img src="/home_images/<%= product.id %>/<%= product.image %>" alt="" class="menu__img">
                    <h3 class="menu__name"><%= product.title %></h3>
                    <span class="menu__detail"><a href="/home-page/<%= product.slug %>">View Details</a></span>
                    <span class="menu__preci">&#8358;<%= parseFloat(product.discountPrice).toFixed(2) %></span>
                    <del>&#8358;<%= parseFloat(product.price).toFixed(2) %> </del> <br>
                    <a href="/cart/add/home-page/<%= product.slug %>" class="button menu__button"><i class='bx bx-cart-alt'></i></a>
                </div>
            <% } %>
            <% }) %>
        </div>
    </section>
    
